<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>DeeCHAT â€¢ Chat</title>
    <meta name="description" content="Chat interface" />
    <link rel="preload" href="/styles/theme.css" as="style" />
    <link rel="stylesheet" href="/styles/chat.css" />
</head>
<body>
        <div class="layout">
            <aside class="sidebar" aria-label="Conversations" data-sidebar>
                <div class="sidebar-header">
                    <h2>Chats</h2>
                    <button class="new-chat-btn" type="button" data-new-chat aria-label="Start new chat">+</button>
                </div>
                <nav class="conversation-list" role="list" data-conversation-list>
                    <!-- Conversation items will be injected / sample static -->
                    <button class="conversation-item active" data-convo-id="default" aria-current="true">
                        <span class="title">New Chat</span>
                    </button>
                </nav>
                <div class="sidebar-footer">
                    <button class="compact secondary" data-clear-all type="button">Clear All</button>
                </div>
            </aside>
            <div class="chat-app" role="application">
                                <header class="chat-header">
                                    <button class="sidebar-toggle" type="button" aria-label="Toggle sidebar" data-sidebar-toggle>
                                        <span></span><span></span><span></span>
                                    </button>
                                    <h1>DeeCHAT</h1>
                                </header>
                <section class="messages" aria-live="polite" aria-label="Chat messages"></section>
                <div class="composer-wrapper">
                    <form id="composer-form" class="composer" autocomplete="off">
                        <textarea id="message-input" name="message" placeholder="Type a message" rows="1" aria-label="Message input" required></textarea>
                        <button type="submit" aria-label="Send message">Send</button>
                    </form>
                </div>
            </div>
        </div>
    <script src="https://cdn.socket.io/4.8.1/socket.io.min.js" integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+" crossorigin="anonymous"></script>
    <script>
        const socket = io();
    </script>
    <script src="/scripts/chat.js" defer></script>
</body>
</html>